<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aar.app.NewAddition.LevelSelectionActiivity">


    <LinearLayout
        android:background="@drawable/main_button_background"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/headingtext"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:text="Choose the Level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:onClick="easyClicked"
            android:layout_marginTop="100dp"
            android:background="@drawable/main_button_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:id="@+id/ll_easy"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                style="@style/buttontext"
                android:layout_centerInParent="true"

                android:text="Easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:onClick="mediumClicked"
            android:background="@drawable/main_button_background"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:id="@+id/ll_medium"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                style="@style/buttontext"
                android:layout_centerInParent="true"
                android:text="Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:onClick="hardClicked"
            android:background="@drawable/main_button_background"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:id="@+id/ll_hard"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                style="@style/buttontext"
                android:layout_centerInParent="true"
                android:text="Hard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
